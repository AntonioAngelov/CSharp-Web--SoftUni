@model CarDealer.Services.Models.Parts.PartEditModel
    
@{
    ViewData["Title"] = $"Edit Part";
}

<br/>
<a href="/parts/all" class="btn btn-primary btn-lg">Back</a>

<h1>@ViewData["Title"]</h1>
<h3>Part Name: @Model.Name</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" min="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>