@model CarDealer.App.Models.Sales.SaleConfirmCreateModel
@{
    ViewData["Title"] = "Review Sale";
}
<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CarId" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CustomerId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" disabled="disabled" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarName" class="control-label"></label>
                <input asp-for="CarName" class="form-control" disabled="disabled" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Discount" class="form-control" />
            </div>
            <div class="form-group">
                <label for="DiscountString" class="control-label">Discount</label>
                <p id="DiscountString" class="form-control" disabled="disabled">
                    @Model.Discount&#37; @(Model.CustomerIsYoungDriver ? "(5%)" : string.Empty)
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" disabled="disabled" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceWithDiscount" class="control-label"></label>
                <input asp-for="PriceWithDiscount" class="form-control" disabled="disabled" />
                <span asp-validation-for="PriceWithDiscount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <a asp-action="All" class="btn btn-default" style="width: 100%">Cancel</a>
                </div>
                <div class="form-group col-md-6">
                    <input type="submit" value="Finalize" class="btn btn-primary" style="width: 100%"/>
                </div>
            </div>
        </form>
    </div>
</div>
