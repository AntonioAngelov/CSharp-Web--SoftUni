@model IEnumerable<CarDealer.Services.Models.Sales.SaleListingModel>

@{
    ViewData["Title"] = $"AllByFilter Sales";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Price</th>
            <th>Discounted Price</th>
            <th>Discount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Price.ToString("F2")</td>
                <td>@sale.DiscountedPrice.ToString("F2")</td>
                <td>@(sale.Discount * 100 + (sale.IsYoungDriver ? 5 : 0)) &#37;</td>
                <td>
                    <a href="/sales/@sale.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>