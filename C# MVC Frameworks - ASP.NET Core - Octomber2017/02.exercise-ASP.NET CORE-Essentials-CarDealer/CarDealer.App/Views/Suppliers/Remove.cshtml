@model CarDealer.App.Models.Suppliers.SupplierDeleteModel

@{
    ViewData["Title"] = "Remove Supplier";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Supplier.Name" class="control-label"></label>
            <input asp-for="@Model.Supplier.Name" class="form-control" disabled="disabled" />
            <span asp-validation-for="@Model.Supplier.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input disabled="disabled" asp-for="@Model.Supplier.IsImporter" /> @Html.DisplayNameFor(model => model.Supplier.IsImporter)
                </label>
            </div>
        </div>
        <a href="/suppliers/confirm/@Model.SupplierId" value="Delete" class="btn btn-danger">Delete</a>
        <a href="/suppliers/all" class="btn btn-secondary">Back</a>
    </div>
</div>


